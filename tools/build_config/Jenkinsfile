#!groovy

pipeline {
    agent {
        label env.AGENT
    }

    stages {

        stage('Build') {
            steps {
                sh '''
                    load cmake/\$CMAKE_VERSION &&
                    load matlab/\$MATLAB_VERSION &&
                    load gcc/\$GCC_VERSION &&
                    ./tools/build_config/build.sh --build
                '''
        }
    }

        stage('Test') {
            steps {
                sh '''
                    load cmake/\$CMAKE_VERSION &&
                    load matlab/\$MATLAB_VERSION &&
                    load gcc/\$GCC_VERSION &&
                    ./tools/build_config/build.sh --test
                '''
                xUnit "build/Testing/**/*.xml"
            }
        }

        stage('Package') {
            steps {
                sh './tools/build_config/build.sh --package'
            }
        }
    }

    post {
        always {
            deleteDir()
        }
    }
}
